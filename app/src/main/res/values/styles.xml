<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabTheme2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tabTheme3" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Custom font style -->
    <style name="DemiLight">
        <item name="android:fontFamily">@font/notosans_demilight</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <style name="reqular" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
