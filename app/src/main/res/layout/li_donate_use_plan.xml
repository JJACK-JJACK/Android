<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
    <TextView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/shape_yellow_number_ic"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/li_donate_use_plan_idx_num"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">
        <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darkGrayC"
                android:text="입양지원 활동 및 입양진행"
                android:layout_marginBottom="6dp"
                android:id="@+id/li_donate_use_plan_detail"/>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="30.000"
                    android:paddingHorizontal="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/darkGrayB"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/li_donate_use_plan_berry_num"/>
            <TextView
                    android:textColor="@color/grayA"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="@string/berry"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>