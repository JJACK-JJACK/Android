<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:background="@color/colorPrimaryDark"/>
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="92dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#111111"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text="결제가 "
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff0000"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text="완료"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#111111"
                android:letterSpacing="-0.02"
                android:gravity="center_horizontal"
                android:text="되었습니다"
        />
    </LinearLayout>
    <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="35.5dp"
            android:layout_width="289dp"
            android:layout_height="47dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="-0.07"
            android:lineSpacingExtra="7sp"
            android:gravity="center_horizontal"
            android:text="아래 안내된 계좌로 입금이 완료되면 베리가 충전됩니다.
기한 내 입금되지 않으면, 충전이 자동 취소됩니다."
    />

    <TextView
            android:layout_marginTop="38dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#111111"
            android:letterSpacing="-0.02"
            android:text="결제 정보"
    />
    <View
            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
    >
    </View>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#da4830"
                android:letterSpacing="-0.02"
                android:text="결제 금액"
        />
        <TextView
                android:id="@+id/tv_payment_money"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="213dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#da4830"
                android:letterSpacing="-0.02"
                android:text="5,500"
        />
        <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#da4830"
                android:letterSpacing="-0.02"
                android:text="원"/>

    </LinearLayout>
    <View
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
    >
    </View>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_marginTop="12.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:letterSpacing="-0.02"
                    android:text="무통장입금"
            />
            <TextView
                    android:layout_marginLeft="206dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#111111"
                    android:letterSpacing="-0.02"
                    android:gravity="end"
                    android:text="국민은행"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:letterSpacing="-0.02"
                    android:text="계좌번호"
            />
            <TextView
                    android:layout_marginLeft="161dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#111111"
                    android:letterSpacing="-0.02"
                    android:gravity="end"
                    android:text="67070204087002"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:letterSpacing="-0.02"
                    android:text="입금 기한"
            />
            <TextView
                    android:layout_marginLeft="167dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#111111"
                    android:letterSpacing="-0.02"
                    android:gravity="end"
                    android:text="2019.07. 14"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#111111"
                    android:letterSpacing="-0.02"
                    android:gravity="end"
                    android:text="까지"
            />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/btn_payment_ok"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark">
        <TextView
                android:layout_marginLeft="165dp"
                android:layout_marginTop="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="확인"/>
    </RelativeLayout>

</LinearLayout>