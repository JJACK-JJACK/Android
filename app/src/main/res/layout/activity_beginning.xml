<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.BeginningActivity">
    <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="28dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_marginTop="72dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#444444"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="10sp"
                tools:text="세상을 바꾸는 작은기부,
시작해보세요!"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="152dp"
                android:paddingHorizontal="17dp"
                android:background="@drawable/shape_btn_email"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="48dp">
            <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_email"
                    android:layout_width="18dp"
                    android:layout_height="14dp"/>
            <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:paddingLeft="72dp"
                    android:textColor="#444444"
                    android:letterSpacing="0.01"
                    android:text="이메일 로그인"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_btn_sign_up"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="48dp">
            <TextView
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="120dp"
                    android:text="회원 가입"
                    android:textSize="14sp"
                    android:textColor="#da4830"
                    android:letterSpacing="0.01"
                    android:layout_width="300dp"
                    android:layout_height="48dp"/>

        </RelativeLayout>

        <TextView
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#999999"
                android:letterSpacing="0.01"
                android:gravity="center_horizontal"
                tools:text="회원가입 진행 시 짹의 서비스 약관,
개인정보 보호정책에 동의한 것으로 간주합니다."/>



    </LinearLayout>

</RelativeLayout>