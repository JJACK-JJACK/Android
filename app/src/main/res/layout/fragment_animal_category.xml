<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:src="@drawable/img_land_animal"
               />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingRight="14dp">
            <TextView
                    android:id="@+id/tv_sorted_recent"
                    android:layout_gravity="center_vertical"
                    android:text="최신순"
                    android:textSize="14sp"
                    android:textColor="@color/grayB"
                    android:paddingHorizontal="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_sorted_popular"
                    android:layout_gravity="center_vertical"
                    android:text="기부율 높은순"
                    android:textSize="14sp"
                    android:textColor="@color/grayB"
                    android:paddingHorizontal="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_sorted_unpopular"
                    android:layout_gravity="center_vertical"
                    android:text="기부율 낮은순"
                    android:textSize="14sp"
                    android:textColor="@color/grayB"
                    android:paddingHorizontal="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_recent_category">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <!--<ProgressBar-->
            <!--android:id="@+id/progress_bar"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:indeterminateTint="@color/darkYellow"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->

</RelativeLayout>