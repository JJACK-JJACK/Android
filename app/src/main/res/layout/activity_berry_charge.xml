<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BerryChargeActivity"
        android:orientation="vertical"
        android:backgroundTint="#ffffff"
>

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#ffffff"
            android:theme="?attr/actionBarTheme"
            android:id="@+id/toolbar"
            android:src="@drawable/ic_back"
            android:layout_marginBottom="48dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"/>
    </android.support.v7.widget.Toolbar>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#111111"
            tools:text="베리충전"
            android:layout_marginBottom="30dp"
            android:paddingLeft="20dp"
            android:drawablePadding="13dp"
            android:drawableRight="@drawable/berry_r_icon"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="4sp"
            android:text="원하는 결제수단을 선택해주세요!
            \n여러분의 베리들이 모여 더 나은 세상이 됩니다."
            android:layout_marginBottom="175dp"
            android:paddingLeft="20dp"
    />
    <Button
            android:text="카드결제"
            android:textStyle="bold"
            android:background="@drawable/radius"
            android:backgroundTint="#da4830"
            android:layout_width="270dp"
            android:layout_height="64dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/button"
            android:drawableLeft="@drawable/ic_card"
            android:paddingLeft="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="23dp"/>
    <Button
            android:text="무통장입금"
            android:textStyle="bold"
            android:background="@drawable/radius"
            android:backgroundTint="#ffc21f"
            android:layout_width="275dp"
            android:layout_height="64dp"
            android:paddingLeft="36dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/ic_bankbook"
            android:id="@+id/button2"
            android:layout_gravity="center"/>


</LinearLayout>