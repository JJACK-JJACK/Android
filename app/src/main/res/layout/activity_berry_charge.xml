<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.berrycharge.BerryChargeActivity"
        android:orientation="vertical"
        android:backgroundTint="@color/white">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:theme="?attr/actionBarTheme"
            android:id="@+id/toolbar"
            android:layout_marginBottom="40dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"/>
    </android.support.v7.widget.Toolbar>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/darkGrayA"
            android:text="베리충전"
            android:layout_marginBottom="24dp"
            android:paddingLeft="20dp"
            android:drawablePadding="13dp"
            android:drawableRight="@drawable/berry_r_icon"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4sp"
            android:text="@string/msg_donate_charge"
            android:layout_marginBottom="180dp"
            android:paddingLeft="20dp"
    />
    <Button
            android:layout_marginHorizontal="20dp"
            android:text="카드결제"
            android:textStyle="bold"
            android:background="@drawable/radius"
            android:backgroundTint="@color/red"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/btn_berry_charge_card"
            android:drawableLeft="@drawable/ic_card"
            android:paddingLeft="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="23dp"/>
    <Button
            android:layout_marginHorizontal="20dp"
            android:text="무통장입금"
            android:textStyle="bold"
            android:background="@drawable/radius"
            android:backgroundTint="@color/goldenYellow"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="36dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_bankbook"
            android:id="@+id/btn_berry_charge_npb"
            android:layout_gravity="center"/>
</LinearLayout>