<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:showIn="@layout/activity_my_page">
    <include
            layout="@layout/toolbar_with_hamburger">
    </include>

    <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#111111"
            android:text="마이 페이지"
            android:paddingBottom="32dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

        <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:id="@+id/img_temp_profile"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="12dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#111111"
                        android:text="나뭇잎"

                />
                <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:id="@+id/imageButton1"
                        android:src="@drawable/ic_edit_large"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                />
            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    tools:text="parkce37@gmail.com"
            />
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_marginVertical="8dp"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_gravity="center"/>

    <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="베리 관리"
    />
    <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="보유 베리"
    />

    <TextView
            android:paddingTop="8dp"
            android:text="베리 이용 내역"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_berry_history"/>
    <View
            android:layout_marginVertical="8dp"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_gravity="center"/>
    <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="기타"
            android:layout_marginBottom="8dp"
    />

    <TextView
            android:text="문의하기"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_inquiry"/>

    <TextView
            android:text="로그아웃"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"/>

    <TextView
            android:text="탈퇴하기"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_withdrawal"/>
    <View
            android:layout_marginVertical="8dp"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_gravity="center"/>
    <TextView
            android:text="오픈소스 라이센스"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_os_license"/>
    <TextView
            android:text="개인정보 처리방침"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_policy"/>

</LinearLayout>