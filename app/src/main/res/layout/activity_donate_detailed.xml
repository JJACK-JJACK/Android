<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tool"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DonateDetailedActivity">

        <android.support.v7.widget.Toolbar
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#ffffff"
                android:theme="?attr/actionBarTheme"
                android:id="@+id/toolbar">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:id="@+id/btn_toolbar_back"/>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
                android:layout_below="@+id/toolbar"
                android:overScrollMode="always"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/myImageView"
                            android:layout_width="match_parent"
                            android:layout_height="207dp"
                            app:srcCompat="@color/colorPrimary">
                    </ImageView>
                    <TextView
                            android:paddingLeft="16dp"
                            android:paddingTop="133dp"
                            android:text="올 겨울 혜리에게도 따뜻한 이불을"
                            android:id="@+id/donate_detailed_title"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@id/myImageView"
                            android:layout_alignTop="@id/myImageView"
                            android:layout_alignRight="@id/myImageView"
                            android:layout_alignBottom="@id/myImageView"/>
                    <TextView
                            android:paddingLeft="16dp"
                            android:paddingTop="174dp"
                            android:text="어빙지역아동센터"
                            android:id="@+id/donate_detailed_association"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@id/myImageView"
                            android:layout_alignTop="@id/myImageView"
                            android:layout_alignRight="@id/myImageView"
                            android:layout_alignBottom="@id/myImageView"/>
                </RelativeLayout>

                <include
                        layout="@layout/li_state"
                        android:id="@+id/donate_li_state">
                </include>

                <android.support.design.widget.TabLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:tabTextColor="#999999"
                        app:tabSelectedTextColor="#000000"
                        app:tabIndicatorHeight="1dp"
                        app:tabIndicatorColor="#da4830"
                        app:tabTextAppearance="@style/tabTheme2"
                        android:id="@+id/donate_detailed_tab">
                </android.support.design.widget.TabLayout>

                <android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/donate_detailed_pager">
                </android.support.v4.view.ViewPager>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/donate_detailed_button_layout">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="응원하기"
                android:background="#ffc21f"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="7"
                android:gravity="center"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="기부하기"
                android:background="#da4830"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="3"
                android:gravity="center"
                android:id="@+id/btn_donate"/>
    </LinearLayout>
</RelativeLayout>