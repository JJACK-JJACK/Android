<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DonateDetailedActivity"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#ffffff"
            android:theme="?attr/actionBarTheme"
            android:id="@+id/toolbar">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="207dp"
            app:srcCompat="@color/colorPrimary"
            />

    <include
            layout="@layout/li_state">
    </include>

    <android.support.design.widget.TabLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tabTextColor="#999999"
            app:tabSelectedTextColor="#000000"
            app:tabIndicatorHeight="1dp"
            app:tabIndicatorColor="#da4830"
            app:tabTextAppearance="@style/tabTheme2"
            android:id="@+id/donate_detailed_tab">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/donate_detailed_pager">
    </android.support.v4.view.ViewPager>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="응원하기"
                android:layout_weight="7"
                android:backgroundTint="#ffc21f"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff">
        </Button>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="기부하기"
                android:backgroundTint="#da4830"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff">
        </Button>
    </LinearLayout>


</LinearLayout>