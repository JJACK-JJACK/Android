<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical"
        android:background="#ffffff"
        tools:context=".MyPageActivity">

    <include
            layout="@layout/toolbar_with_hamburger">
    </include>

    <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#111111"
            android:text="마이 페이지"
            android:paddingBottom="39dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

        <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/img_temp_profile"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="12dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#111111"
                        tools:text="나뭇잎"
                        android:layout_marginRight="190dp"
                />
                <ImageButton
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:id="@+id/imageButton1"
                        android:src="@drawable/ic_edit_large"
                        android:background="#ffffff"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    tools:text="parkce37@gmail.com"
            />
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_gravity="center"/>

    <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999999"
            tools:text="베리 관리"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            tools:text="보유 베리"
    />

    <Button
            android:text="베리 이용 내역"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_berry_history"/>
    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_gravity="center"/>
    <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="기타"
    />

    <Button
            android:text="문의하기"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_inquiry"/>

    <Button
            android:text="로그아웃"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"/>

    <Button
            android:text="탈퇴하기"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_withdrawal"/>
    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_gravity="center"/>
    <Button
            android:text="오픈소스 라이센스"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_os_license"/>
    <Button
            android:text="개인정보 처리방침"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_more_small"
            android:paddingRight="16dp"
            android:id="@+id/btn_policy"/>

</LinearLayout>