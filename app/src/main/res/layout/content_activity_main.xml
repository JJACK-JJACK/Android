<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:attrs="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/btn_hambuger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/ic_hamburger"/>

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_account_circle_black_24dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="16sp"
                android:text="세상을 바꾸는\n작은 기부, 짹 !"
                android:textColor="#000000"
                android:textSize="32sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.01"
                android:text="어떤 기부가 있을까요?"
                android:textColor="#111111"
                android:textSize="16sp"/>


        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="328dp"
                android:layout_marginTop="20dp"
                android:id="@+id/main_activity_slider_pager">
        </android.support.v4.view.ViewPager>


        <!--<android.support.design.widget.TabLayout-->
                <!--android:layout_marginLeft="40dp"-->
                <!--android:layout_marginRight="250dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:id="@+id/dot_indicator_activity_main"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="14dp"-->
                <!--app:tabIndicatorHeight="0dp"-->
                <!--app:tabBackground="@drawable/dot_selector">-->
        <!--</android.support.design.widget.TabLayout>-->

        <com.rd.PageIndicatorView
                android:layout_marginTop="14dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/buttons"
                android:layout_marginBottom="20dp"
                app:piv_animationType="worm"
                app:piv_unselectedColor="#eeeeee"
                app:piv_selectedColor="#ffc21f"
                app:piv_viewPager="@id/main_activity_slider_pager"
                android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>