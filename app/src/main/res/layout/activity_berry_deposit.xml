<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/white"
                android:theme="?attr/actionBarTheme">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_back"
                    android:src="@drawable/ic_back"/>

            <TextView
                    android:layout_width="59dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="113dp"
                    android:text="베리충전"
                    android:textColor="@color/darkGrayA"
                    android:textSize="16sp"/>
        </android.support.v7.widget.Toolbar>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="28dp"
                android:text="무통장입금"
                android:textColor="@color/darkGrayA"
                android:textSize="14sp"/>

        <Spinner
                android:text="입금하실 은행 선택"
                android:textSize="20sp"
                android:textColor="#999999"
                android:layout_marginLeft="20dp"
                android:id="@+id/berry_deposit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:layout_marginTop="24dp">
        </Spinner>


        <View
                android:background="@color/grayB"
                android:layout_width="320dp"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7.5dp"></View>

        <TextView
                android:textColor="@color/darkGrayA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="39.5dp"
                android:text="@string/berry_for_charge"
                android:textSize="14sp"/>

        <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_deposit_radio10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="28dp">
            <ImageView
                    android:id="@+id/deposit_img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:text="베리 10개"
                    android:layout_marginLeft="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:gravity="right"
                    android:layout_marginLeft="32dp"
                    android:text="1,100원"
            />
        </LinearLayout>
        <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_deposit_radio50"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:text="베리 50개"
                    android:layout_marginLeft="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:layout_marginLeft="34dp"
                    android:text="5,500원"
            />
        </LinearLayout>
        <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_deposit_radio100"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:text="베리 100개"
                    android:layout_marginLeft="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginLeft="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:gravity="right"
                    android:layout_marginLeft="19dp"
                    android:text="11,000원"
            />
        </LinearLayout>
        <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_deposit_radio300"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:text="베리 300개"
                    android:layout_marginLeft="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginLeft="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:layout_marginLeft="19dp"
                    android:text="33,000원"
            />
        </LinearLayout>
        <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_deposit_radio500"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:text="베리 500개"
                    android:layout_marginLeft="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginLeft="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrayA"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:layout_marginLeft="19dp"
                    android:text="55,000원"
            />
        </LinearLayout>


    </LinearLayout>


    <Button
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/goldenYellow"
            android:text="@string/charge"
            android:id="@+id/btn_berry_deposit_charge"
            android:textColor="@color/white"
            android:textSize="16sp"/>
</RelativeLayout>