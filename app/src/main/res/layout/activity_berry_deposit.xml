<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#ffffff"
                android:theme="?attr/actionBarTheme">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"/>

            <TextView
                    android:layout_width="59dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="113dp"
                    android:text="베리충전"
                    android:textSize="16sp"/>
        </android.support.v7.widget.Toolbar>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="28dp"
                android:text="무통장입금"
                android:textSize="14sp"/>

        <Spinner
                android:layout_width="169dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"></Spinner>

        <View
                android:layout_width="320dp"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7.5dp"></View>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="39.5dp"
                android:text="충전할 베리"
                android:textSize="14sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="28dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:text="베리 10개"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:gravity="right"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="31dp"
                    android:text="1,100원"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="28dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:text="베리 50개"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="31dp"
                    android:text="5,500원"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="28dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:text="베리 100개"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:gravity="right"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="11,000원"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="28dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:text="베리 300개"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="33,000원"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/deposit_img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_selector"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_berrys_small"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="28dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:text="베리 500개"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dot_radio"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="27dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:letterSpacing="0.01"
                    android:gravity="end"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="55,000원"
            />
        </LinearLayout>


    </LinearLayout>


    <Button
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_btn_login"
            android:text="충전하기"
            android:textColor="#ffffff"
            android:textSize="20dp"/>


</RelativeLayout>