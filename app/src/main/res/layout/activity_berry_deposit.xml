<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="#ffffff"
            android:theme="?attr/actionBarTheme">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="19dp"
                android:layout_marginLeft="151dp"
                android:text="베리충전"
                android:textSize="16sp" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="무통장입금"
            android:textSize="14sp" />

        <Spinner
            android:layout_width="169dp"
            android:layout_height="24dp"></Spinner>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="58.5dp"
            android:text="충전할 베리"
            android:textSize="14sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/radio_selector"
                    android:drawableLeft="@drawable/ic_berrys_small"
                    android:drawableRight="@drawable/dot_radio"
                    android:drawablePadding="10dp"
                    android:paddingLeft="28dp"
                    android:text="베리 10개"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="1,100원"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@drawable/radio_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_berrys_small"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/dot_radio"
                    android:paddingLeft="28dp"
                    android:text="베리 50개"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="5,500원"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@drawable/radio_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_berrys_small"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/dot_radio"
                    android:paddingLeft="28dp"
                    android:text="베리 100개"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="11,000원"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@drawable/radio_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_berrys_small"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/dot_radio"
                    android:paddingLeft="28dp"
                    android:text="베리 300개"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="33,000원"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@drawable/radio_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_berrys_small"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/dot_radio"
                    android:paddingLeft="28dp"
                    android:text="베리 500개"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:text="55,000원"
                    android:gravity="right"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_btn_login"
        android:text="충전하기"
        android:textColor="#ffffff"
        android:textSize="20dp" />


</RelativeLayout>