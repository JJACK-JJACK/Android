<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:dividerPadding="1dp"
        android:paddingLeft="90dp"
>
    <RelativeLayout
            android:id="@+id/nav_donatelist_sort_recent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="최신순"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/nav_donatelist_sort_popular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="기부율 높은순"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/nav_donatelist_sort_unpopular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="기부율 낮은순"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                />
    </RelativeLayout>
</LinearLayout>